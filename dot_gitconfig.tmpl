[user]
    name = {{ .name }}
    email = {{ .email }}

[core]
    excludesfile = {{ .chezmoi.homeDir }}/.gitignore_global
    pager = delta

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true
    light = false

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default
